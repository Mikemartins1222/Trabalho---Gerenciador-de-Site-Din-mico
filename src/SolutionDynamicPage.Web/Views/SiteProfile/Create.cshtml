@using SolutionDynamicPage.Infra.Domain.DTO;
@model SolutionDynamicPage.Infra.Domain.DTO.SiteProfileDTO


<h3 class="crud-text">Informe os dados para gerar o seu site</h3>
<div>
    <a asp-action="ListProfile">Voltar para os presets</a>
</div>

<form asp-controller="SiteProfile" asp-action="Create" method="Post" enctype="multipart/form-data">


    <div class="form-group">
    <label for="ProfileName">Nome do Preset</label>
    <input type="text" asp-for="profileName" class="form-control" placeholder="Nome do preset do seu site">
     <span asp-validation-for="profileName" class="text-danger"></span>
    </div>
    
    <div class="form-group">
    <label for="BusinessName">Nome do Negócio</label>
    <input type="text" asp-for="businessName" class="form-control" placeholder="Nome do seu negócio">
    <span asp-validation-for="businessName" class="text-danger"></span>
    </div>

    <div class="form-group">
    <label for="Description">Descrição</label>
    <input type="text" asp-for="description" class="form-control" placeholder="Descrição do seu negócio">
    <span asp-validation-for="description" class="text-danger"></span>
    </div>
    
    <div class="form-group">
    <label for="FacebookAdress">Facebook</label>
    <input type="text" asp-for="facebookAdress" class="form-control" placeholder="Facebook caso tenha">
    </div>

    <div class="form-group">
    <label for="InstagramAdress">Instagram</label>
    <input type="text" asp-for="instagramAdress" class="form-control" placeholder="Instagram caso tenha">
    </div>

    <div class="form-group">
    <label for="Adress">Endereço</label>
     <input type="text" asp-for="address" class="form-control" placeholder="Endereço">
     <span asp-validation-for="address" class="text-danger"></span>
    </div>

     <div class="form-group">
     <label for="Email">Endereço</label>
     <input type="text" asp-for="email" class="form-control" placeholder="E-mail">
     <span asp-validation-for="email" class="text-danger"></span>
      </div>

      <div class="form-group">
      <label for="Phone">Telefone</label>
      <input type="text" asp-for="phone" class="form-control" placeholder="Telefone">
      </div>

      <div class="form-group">
     <label for="CellPhone">Celular</label>
     <input type="text" asp-for="cellPhone" class="form-control" placeholder="Celular">
     <span asp-validation-for="cellPhone" class="text-danger"></span>
     </div>

     <div class="form-group"> 
     <label for="Title">Título</label>
     <input type="text" asp-for="title" class="form-control" placeholder="Título do Texto">
      <span asp-validation-for="title" class="text-danger"></span>
     </div>

    <div class="form-group">
        <label for="FooterDescription">Descrição do Rodapé</label>
        <input type="text" asp-for="footerDescription" class="form-control" placeholder="Descrição do Rodapé">
        <span asp-validation-for="footerDescription" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label for="file">Upload de imagem para logo:</label>
        <input type="file" name="imageLogo" class="form-control" />
        <small class="form-text text-muted">O tamanho da imagem deve ser 50x50.</small>
    </div>

    <div class="form-group">
        <label for="file">Upload de imagem para o Banner:</label>
        <input type="file" name="imageBanner" class="form-control" />
        <small class="form-text text-muted">O tamanho da imagem deve ser 1280x350.</small>
    </div>



    <div class="form-group">
    <button type="submit" class="btn btn-primary">Criar</button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }